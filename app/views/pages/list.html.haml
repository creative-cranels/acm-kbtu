= render 'header'

%h1 Listing pages

%table
  %tr
    %th Parent
    %th Path
    %th Order
    %th Title
    %th Body
    %th
    %th
    %th

  - @pages.each do |page|
    %tr
      %td= page.parent
      %td= page.path
      %td= page.order
      %td= page.title
      %td
        = page.body[0..100]
        - if page.body.length>100
          %i ->
      %td= link_to 'Show', '/pages/'+page.path
      %td= link_to 'Edit', edit_page_path(page)
      %td= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete

%br

